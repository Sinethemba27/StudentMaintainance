@model IEnumerable<StudentMaintainance.Models.Maintainance>
   @using StudentMaintainance.Models

@{

    Layout = "~/Views/Shared/_Backend.cshtml";
    ApplicationDbContext db = new ApplicationDbContext();
    var getSTudents = db.Students.Count();
    var completed = db.DoneMaintainances.Where(x => x.Status == "Completed").Count();
    var Progress = db.Maintainances.Where(x => x.Status == "In Progress").Count();
    var wait = db.Maintainances.Where(x => x.Status == "Awaiting").Count();

}
    <div class="content-wrap">
        <div class="main">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-lg-8 p-r-0 title-margin-right">
                        <div class="page-header">
                            <div class="page-title">
                                <h1>Hello, <span>Welcome Mr Mzimela</span></h1>
                            </div>
                        </div>
                    </div>
                    <!-- /# column -->
                    <div class="col-lg-4 p-l-0 title-margin-left">
                        <div class="page-header">
                            <div class="page-title">
                                <ol class="breadcrumb">
                                    <li class="breadcrumb-item"><a href="#">Dashboard</a></li>
                                    <li class="breadcrumb-item active">Home</li>
                                </ol>
                            </div>
                        </div>
                    </div>
                    <!-- /# column -->
                </div>
                <!-- /# row -->
                <section id="main-content">
                    <div class="row">
                        <div class="col-lg-3">
                            <div class="card">
                                <div class="stat-widget-two">
                                    <div class="stat-content">
                                        <div class="stat-text">Total Student Sign Ups </div>
                                        <div class="stat-digit"> <i class="fa fa-rand"></i>@getSTudents</div>
                                    </div>
                                    <div class="progress">
                                        <div class="progress-bar progress-bar-success w-40" role="progressbar" aria-valuenow="60" aria-valuemin="0" aria-valuemax="100"></div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-3">
                            <div class="card">
                                <div class="stat-widget-two">
                                    <div class="stat-content">
                                        <div class="stat-text">Task Completed</div>
                                        <div class="stat-digit"> <i class="fa fa-"></i>@completed</div>
                                    </div>
                                    <div class="progress">
                                        <div class="progress-bar progress-bar-primary w-70" role="progressbar" aria-valuenow="78" aria-valuemin="0" aria-valuemax="100"></div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-3">
                            <div class="card">
                                <div class="stat-widget-two">
                                    <div class="stat-content">
                                        <div class="stat-text">Task In Progress</div>
                                        <div class="stat-digit"> <i class="fa fa-"></i> @Progress</div>
                                    </div>
                                    <div class="progress">
                                        <div class="progress-bar progress-bar-warning w-30" role="progressbar" aria-valuenow="50" aria-valuemin="0" aria-valuemax="100"></div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-3">
                            <div class="card">
                                <div class="stat-widget-two">
                                    <div class="stat-content">
                                        <div class="stat-text">Awaiting</div>
                                        <div class="stat-digit">@wait</div>
                                    </div>
                                    <div class="progress">
                                        <div class="progress-bar progress-bar-danger w-20" role="progressbar" aria-valuenow="80" aria-valuemin="0" aria-valuemax="100"></div>
                                    </div>
                                </div>
                            </div>
                            <!-- /# card -->
                        </div>
                        <!-- /# column -->
                    </div>
                    <!-- /# row -->




                    <div class="row">
                        <!-- /# column -->
                        <div class="col-lg-6">
                            <div class="card text-center">
                                <div class="m-t-10">
                                    <h4> Maintenance Issues </h4>

                                </div>
                                <div class="recent-comment">
                                    @foreach (var item in Model)
                                    {

                                            <div class="media">
                                                <div class="media-left">
                                                    @*<a href="#"><img class="media-object" src="~/assets/images/avatar/1.jpg" alt="..."></a>*@
                                                </div>
                                                <div class="media-body">
                                                    <h4 class="media-heading">@item.StudentNAme</h4>
                                                    <p>@item.Comments</p>
                                                    <div class="comment-action">
                                                        <div class="badge badge-success">@item.Status</div>
                                                        <span class="m-l-10">
                                                            <a href="#"><i class="ti-check color-success"></i></a>
                                                            <a href="#"><i class="ti-close color-danger"></i></a>
                                                            <a href="#"><i class="fa fa-reply color-primary"></i></a>
                                                        </span>
                                                    </div>
                                                    <p class="comment-date">October 15, 2019</p>
                                                </div>
                                            </div>
                                    }

</div>
                            </div>
                            <!-- /# card -->
                        </div>
                        <!-- column -->
                        <div class="col-lg-6">
                            <div class="card text-center">
                                <div class="m-t-10">
                                    <div class="card-title">
                                        <h4>Durban</h4>
                                        <div class="card-title-right-icon">
                                            <ul></ul>
                                        </div>
                                    </div>
                                    <head>
                                        <meta name="viewport" content="initial-scale=1.0, width=device-width" />
                                        <script src="https://js.api.here.com/v3/3.1/mapsjs-core.js"
                                                type="text/javascript" charset="utf-8"></script>
                                        <script src="https://js.api.here.com/v3/3.1/mapsjs-service.js"
                                                type="text/javascript" charset="utf-8"></script>
                                    </head>

                                    <div style="width: 600px; height: 400px" id="mapContainer"></div>
                                    <script>
                                            // Initialize the platform object:
                                            var platform = new H.service.Platform({
                                                'apikey': 'iHIESFEt5QvF4P3NXMybc-oiB2x5b6tQIFq-LZCglnc'
                                            });

                                            // Obtain the default map types from the platform object
                                            var maptypes = platform.createDefaultLayers();

                                            // Instantiate (and display) a map object:
                                            var map = new H.Map(
                                                document.getElementById('mapContainer'),
                                                maptypes.vector.normal.map,
                                                {
                                                    zoom: 15,
                                                    center: { lng: 31.0107, lat: -29.8524 }
                                                });
                                           var marker = new H.map.Marker({ lat: -29.8524, lng:31.0107, });
        map.addObject(marker);
        map.addEventListener("tap", ev => {
            var target = ev.target;
            map.removeObject(marker);
            marker = new H.map.Marker(map.screenToGeo(ev.currentPointer.viewportX, ev.currentPointer.viewportY));
            map.addObject(marker);
        });
                                    </script>

                                    <!-- /# card -->

                                </div>
                            </div>
                        </div>

                    </div>
                    <div class="row">
                        <!-- column -->
                        <div class="col-lg-8">
                            <div class="card">
                                <div class="card-body">
                                    <h4 class="card-title">Students Overview</h4>
                                    <div id="morris-bar-chart"></div>
                                </div>
                            </div>
                        </div>
                        <!-- column -->
                        <div class="col-md-4">
                            <div class="card text-center">
                                <div class="m-t-10">
                                    <p>Listing Rooms</p>
                                    <h5>11980</h5>
                                </div>
                                <div class="widget-card-circle pr m-t-20 m-b-20" id="info-circle-card">
                                    <i class="ti-control-shuffle pa"></i>
                                </div>
                                <ul class="widget-line-list m-b-15">
                                    <li class="border-right">8% <br><span class="color-success"><i class="ti-hand-point-up"></i> Available Rooms</span></li>
                                    <li>92% <br><span class="color-danger"><i class="ti-hand-point-down"></i>Occupied Rooms</span></li>
                                </ul>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-lg-12">
                            <div class="footer">
                                <p>2019 Developed by HTTP200 </p>
                            </div>
                        </div>
                    </div>
                </section>
            </div>
        </div>
    </div>
    <div id="search">
        <button type="button" class="close">×</button>
        <form>
            <input type="search" value="" placeholder="type keyword(s) here" />
            <button type="submit" class="btn btn-primary">Search</button>
        </form>
    </div>
   